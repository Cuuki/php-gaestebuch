{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Benutzer bearbeiten - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block header %}
    {% include "header.twig" %}
{% endblock %}

{% block content %}
<div class="row row-offcanvas row-offcanvas-left">
    {% include "sidebar.twig" %}
    <div class="col-sm-7 col-sm-offset-1">
        <div class="visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">
                <i class="mdi-action-view-list"></i> Menu
            </button>
        </div>         
        <ol class="breadcrumb">
            <li>
                <a href="javascript:void(0)">
                    <span class="mdi-content-create"></span>
                </a>
            </li>
            <li class="active">Bearbeiten</li>
        </ol>
        <section class="well">
            <h3>Benutzer bearbeiten</h3>        
            {% if message is defined %}
            <p class="{{message_type}}">{{message}}</p>
            {% endif %}
            {% if users == false %}
            <p>Keine Benutzer vorhanden!</p>
            {% endif %}              
        </section>
        {% if message is not defined %}
            {% for user in users %}
            <article class="well">         
                <h4>
                    <strong>Benutzername:</strong> {{ user.username }}
                </h4>
                <p>
                    <strong>E-Mail:</strong> {{ user.useremail }}
                </p>
                <p>
                    <strong>Rolle:</strong> {{ user.role }}
                </p>                
                <p>
                    <a href="{{ app.url_generator.generate('update') }}{{ user.id }}">Bearbeiten</a>
                </p>
            </article>
            {% endfor %}
            {% if users == true %}
                {% if lastpage != firstpage %}
                <div class="well visible-lg">
                    {% include "pagination_lg.twig" %}
                </div>
                <div class="well visible-md">
                    {% include "pagination_md.twig" %}
                </div>
                <div class="well visible-sm">
                    {% include "pagination_sm.twig" %}
                </div>
                <div class="well visible-xs">
                    {% include "pagination_xs.twig" %}
                </div>
                {% endif %}
            {% endif %}
        {% endif %}
    </div>
    <div class="col-sm-1"></div>
</div>
{% endblock %}
