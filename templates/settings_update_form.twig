{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Benutzerdaten ändern - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block header %}
    {% include "header.twig" %}
{% endblock %}

{% block content %}
<div class="row row-offcanvas row-offcanvas-left">
    {% include "sidebar.twig" %}
    <div class="col-sm-7 col-sm-offset-1">
        <div class="visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">
                <i class="mdi-action-view-list"></i> Menu
            </button>
        </div>	
        <ol class="breadcrumb">
            <li>
                <a href="javascript:void(0)">
                    <span class="mdi-action-settings"></span>
                </a>
            </li>
            <li class="active">Profil</li>
        </ol>
        <section class="well">
            <h3>{{newinput_text}}</h3>
            {% if relog is defined and relog == true %}
            <p class="alert alert-dismissable alert-danger">
                <a href="{{ app.url_generator.generate('logout') }}">Loggen Sie sich neu ein!</a>
            </p>
            {% endif %}            
            <fieldset>
                <form  action="" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label for="{{oldinput_for}}" class="sr-only control-label">{{oldinput_text}}</label>
                        <div class="col-lg-12">
                            <div class="form-control-wrapper">  
                                <input class="form-control" type="text" id="{{oldinput_for}}" name="{{oldinput_name}}" placeholder="{{oldinput_text}}">
                                <span class="material-input"></span>
                            </div>
                        </div>
                                
                    </div>
                    <div class="form-group">
                        <label for="{{newinput_for}}" class="sr-only control-label">{{newinput_text}}</label>
                        <div class="col-lg-12">
                            <div class="form-control-wrapper">  
                                <input class="form-control" type="text" id="{{newinput_for}}" name="{{newinput_name}}" placeholder="{{newinput_text}}">
                                <span class="material-input"></span>
                            </div>
                        </div>    
                    </div>
                    {% if errormessages is defined and errormessages is not null and errormessages.username is defined %}
                        <p class="alert alert-dismissable alert-danger">{{errormessages.username}}</p>
                    {% endif %}
                    {% if errormessages is defined and errormessages is not null and errormessages.useremail is defined %}
                        <p class="alert alert-dismissable alert-danger">{{errormessages.useremail}}</p>
                    {% endif %}
                    {% if errormessages is defined and errormessages is not null and errormessages.password is defined %}
                        <p class="alert alert-dismissable alert-danger">{{errormessages.password}}</p>
                    {% endif %}
                    {% if message is defined %}
                    <p class="{{message_type}}">{{message}}</p>
                    {% endif %}                    
                    <button class="btn btn-primary" name="submit" type="submit">Ändern</button>
                </form>
            </fieldset>
            <p class="text-right">
                <a href="{{ app.url_generator.generate('settings') }}">Zurück</a>                        
            </p>
        </section>
    </div>
</div>
{% endblock %}