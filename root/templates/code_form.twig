{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Passwort wiederherstellen - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block header %}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h2>Passwort anfordern:</h2>
            </div>
            <div class="panel-body">
                {% if message is defined %}
                <p class="{{message_type}}">{{message}}</p>
                {% endif %}
                <form action="" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label for="code" class="sr-only">Code:</label>
                            <input class="form-control" placeholder="Code" name="code" type="number" autofocus >
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">Passwort:</label>
                            <input class="form-control" placeholder="Passwort" name="password" type="password" >
                        </div>
                        <button class="btn btn-primary" name="codesubmit" type="submit">Weiter</button>
                    </fieldset>
                    <p class="text-right">
                        <a href="{{ app.url_generator.generate('login') }}" >Zur√ºck</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}