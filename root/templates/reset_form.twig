{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Passwort wiederherstellen - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">    
        <section class="well">
            <h3>Code zusenden</h3>
            <fieldset>
                <form action="" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label for="email" class="sr-only control-label">E-Mail</label>
                        <div class="col-lg-12">
                            <div class="form-control-wrapper">
                                <input class="form-control" placeholder="E-Mail" id="email" name="email" type="email" >                        
                                <span class="material-input"></span>
                            </div>
                        </div>
                    </div>
                    {% if message is defined %}
                    <p class="{{message_type}}">{{message}}</p>
                    {% endif %}                    
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button class="btn btn-primary" name="reset" type="submit">Versenden</button>                            
                        </div>
                    </div>
                </form>
                {% if message is defined %}
                    {% if message_type == "alert alert-dismissable alert-success" %}
                    <p class="text-right">
                        <a href="{{ app.url_generator.generate('resetCode') }}">Weiter</a>
                    </p>
                    {% endif %}
                {% endif %}
                <p class="text-right">
                    <a href="{{ app.url_generator.generate('login') }}">Zur√ºck</a>                        
                </p>
            </fieldset>
        </section>
    </div>
</div>
{% endblock %}