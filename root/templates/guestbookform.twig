{% set value = {
    'firstname' : '', 
    'lastname' : '', 
    'email' : '', 
    'textinput' : ''
} %}
{% if errormessages is defined and errormessages is not null %}
    {% set value = {
        'firstname' : postdata.firstname,
        'lastname' : postdata.lastname,
        'email' : postdata.email,
        'textinput' : postdata.textinput
    } %}
{% endif %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>
            <a name='add'>{{ headline }}</a>
        </h2>
    </div>
    <div class="panel-body">
        <fieldset>
            <form action="" method="post">      
                <div class="form-group">
                    <label for="firstname" class="sr-only">Vorname:</label>
                    <input class="form-control" type="text" name="firstname" value="{{value.firstname}}" placeholder="Vorname">
                    {% if errormessages is defined and errormessages is not null and errormessages.firstname is defined %}
                        <p class="errorMessage">{{errormessages.firstname}}</p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="lastname" class="sr-only">
                        Nachname:
                    </label>
                    <input class="form-control" type="text" name="lastname" value="{{value.lastname}}" placeholder="Nachname">
                    {% if errormessages is defined and errormessages is not null and errormessages.lastname is defined %}
                        <p class="errorMessage">{{errormessages.lastname}}</p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="email" class="sr-only">
                        E-Mail Adresse:
                    </label>
                    <input class="form-control" type="email" name="email" value="{{value.email}}" placeholder="E-Mail">
                    {% if errormessages is defined and errormessages is not null and errormessages.email is defined %}
                        <p class="errorMessage">{{errormessages.email}}</p>
                    {% endif %}            
                </div>
                <div class="form-group">
                    <label for="textinput" class="sr-only">
                       Beitrag (max. 1000 Zeichen):
                    </label>
                    <textarea class="form-control" name="textinput" rows="10" cols="20" placeholder="Beitrag (max. 1000 Zeichen)">{{value.textinput}}</textarea>
                    {% if errormessages is defined and errormessages is not null and errormessages.textinput is defined %}
                        <p class="errorMessage">{{errormessages.textinput}}</p>
                    {% endif %}
                </div>
                <button class="btn btn-primary" name="submit" type="submit">{{ submit_text }}</button>
                <button class="btn btn-primary" name="reset" type="reset">Eingabe lÃ¶schen</button>
            </form>
        </fieldset>
    </div>
</div>