{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Benutzer hinzufügen - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block header %}
    {% include "header.twig" %}
{% endblock %}

{% block content %}
<div class="row">
    {% include "sidebar.twig" %}
    <div class="col-sm-8 col-sm-offset-4 col-lg-10 col-lg-offset-2 main">        
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </li>
            <li class="active">Hinzufügen</li>
        </ol>
    </div>
    {% if message is defined %}
    <div class="panel-body">
        <p class="{{message_type}}">{{ message }}</p>        
    </div>    
    {% endif %}
    {% include "user_form.twig" %}
</div>
{% endblock %}