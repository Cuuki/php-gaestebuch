{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Benutzer bearbeiten - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block header %}
    {% include "header.twig" %}
{% endblock %}

{% block content %}
<div class="row">
    {% include "sidebar.twig" %}
    <div class="col-sm-8 col-sm-offset-4 col-lg-10 col-lg-offset-2 main">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
            </li>
            <li class="active">Bearbeiten</li>
        </ol>
    </div>
    <div class="col-sm-8 col-sm-offset-4 col-lg-10 col-lg-offset-2">
        <div class="panel panel-default">   
                <div class="panel-heading">
                    <h2>Einzeln ändern</h2>
                </div>
            {% if message is defined %}
            <div class="panel-body">
                <p class="{{message_type}}">{{message}}</p>
            </div>    
            {% endif %}
            {% if message is not defined %}
                {% if errormessages is not defined or errormessages is null %}
                <div class="panel-body">
                    <p>
                        <strong>Benutzername:</strong> {{ user.username }}
                    </p>
                    <p>
                        <a href="{{ user.id }}/username">Benutzername bearbeiten</a>
                    </p>
                    <p>
                        <strong>E-Mail:</strong> {{ user.useremail }}
                    </p>
                    <p>
                        <a href="{{ user.id }}/email">E-Mail bearbeiten</a>
                    </p>
                    <p>
                        <strong>Passwort:</strong> (Verschlüsselt)
                    </p>
                    <p>
                        <a href="{{ user.id }}/password">Passwort bearbeiten</a>
                    </p>
                </div>
                {%endif%}
            {% endif %}
        </div>
    </div>
    {% include "user_form.twig" %}
</div><!-- /.col-->
{% endblock %}
