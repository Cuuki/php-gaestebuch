{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Benutzer bearbeiten - Adminpanel</title>
    {% endblock %}
    {% block css %}
        <link rel="stylesheet" type="text/css" href="../../../../css/style.css">
    {% endblock %}
{% endblock %}

{% block header %}
    <h1>{{ headline }}</h1>
    {% include "userheader.twig" %}
{% endblock %}

{% block content %}
<section>
    <article>
    {% if message is not defined %} 
    {% if errormessages is not defined or errormessages is null %}
        <h2>Daten einzeln ändern:</h2>
            <p>Benutzername: {{ user.username }}</p>
            <p>
                <a href="{{ user.id }}/username">Benutzername bearbeiten</a>
            </p>
            <br>
            <p>E-Mail: {{ user.useremail }}</p>
            <p>
                <a href="{{ user.id }}/email">E-Mail bearbeiten</a>
            </p>
            <br>
            <p>Passwort: {{ user.password }}</p>
            <p>
                <a href="{{ user.id }}/password">Passwort bearbeiten</a>
            </p>
            <br>
        {%endif%}
    {% endif %}
    </article>
</section>
    <h2>Alle Benutzerdaten ändern:</h2>
    {% include "user_form.twig" %}
{% endblock %}

{% block footer %}
    <h2 class="heading">Mehr Informationen:</h2>
    <div class="list">
        <ul>
            <li>
                <a href="#">Lorem</a>
            </li>
        </ul>
    </div>
{% endblock %}