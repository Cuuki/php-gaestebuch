{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Beitrag bearbeiten - Adminpanel</title>
    {% endblock %}
    {% block css %}
        <link rel="stylesheet" type="text/css" href="../../css/style.css">
    {% endblock %}
{% endblock %}

{% block header %}
    <h1 class="heading">Beitrag bearbeiten:</h1>
{% endblock %}

{% block content %}
        {% if posts == false %}
            <p>Keine Beiträge vorhanden!</p>
        {% endif %}
        {% for post in posts %}
            <p>{{ post.firstname }}</p>
            <p>{{ post.lastname }}</p>
            <p>{{ post.email }}</p>
            <p>{{ post.content }}</p>
            <p>{{ post.created }}</p>
            <p>
                <a href="{{ app.url_generator.generate('postUpdate') }}/{{ post.id_entry }}">Bearbeiten</a>
            </p>
            <br>
        {% endfor %}
        {% include "pagination.twig" %}
        <br>
        <p>
            <a href="{{ app.url_generator.generate('dashboard') }}">Zurück zur Übersicht</a>
        </p>            	
{% endblock %}

{% block footer %}   
    <h2 class="heading">Mehr Informationen:</h2>
    <div class="list">
        <ul>
            <li>
                <a href="#">Lorem</a>
            </li>
        </ul>
    </div>
{% endblock %}