{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Beitrag bearbeiten - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block header %}
    {% include "header.twig" %}
    {% include "sidebar.twig" %}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
            </li>
            <li class="active">Bearbeiten</li>
        </ol>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Beitrag bearbeiten</h2>
            </div>
            {% if posts == false %}
            <div class="panel-body">
                <p>Keine Beitr√§ge vorhanden!</p>
            </div>    
            {% endif %}
            {% for post in posts %}
            <div class="panel-body">
                <p>
                    <strong>Beitrag:</strong> {{ post.content }}
                </p>
                <p>
                    <strong>Autor:</strong> {{ post.firstname }} {{ post.lastname }}
                </p>
                <p>
                    <strong>E-Mail:</strong> {{ post.email }}
                </p>
                <p>
                    <strong>Erstellt am:</strong> {{ post.created }}
                </p>  
                <p>
                    <a href="{{ app.url_generator.generate('postUpdate') }}/{{ post.id_entry }}">Bearbeiten</a>
                </p>
            </div>
            {% endfor %}
            <div class="panel-body">
                {% include "pagination.twig" %}                        
            </div>
        </div>
    </div>
</div>
{% endblock %}