{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Profilübersicht - Adminpanel</title>
    {% endblock %}
    {% block css %}
        <link rel="stylesheet" type="text/css" href="../../../css/style.css">
    {% endblock %}
{% endblock %}

{% block header %}
    <h1>{{ headline }}</h1>
{% endblock %}

{% block content %}
    <section>
        <article>
            <ul>
                <li>
                    <p>
                        <a href="{{ app.url_generator.generate('changeUsername') }}">Benutzernamen ändern</a>
                    </p>
                </li>
                <li>
                    <p>
                        <a href="{{ app.url_generator.generate('changePassword') }}">Passwort ändern</a>
                    </p>
                </li>
                <li>
                    <p>
                        <a href="{{ app.url_generator.generate('changeEmail') }}">E-Mail ändern</a>
                    </p>                    
                </li>						
                <li>
                    <p>
                        <a href="{{ app.url_generator.generate('logout') }}">Ausloggen</a>
                    </p>                    
                </li>							
            </ul>
            <p>
                <a href="{{ app.url_generator.generate('dashboard') }}">Zurück zur Übersicht</a>                
            </p>
        </article>
    </section>	
{% endblock %}

{% block footer %}
    
    <h2 class="heading">Mehr Informationen:</h2>
    <div class="list">
        <ul>
            <li>
                <a href="#">Lorem</a>
            </li>
        </ul>
    </div>
{% endblock %}