{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Benutzer löschen - Adminpanel</title>
    {% endblock %}
    {% block css %}
        <link rel="stylesheet" type="text/css" href="../../../../css/bootstrap.min.css">
    {% endblock %}
{% endblock %}

{% block header %}
    <h1>{{ headline }}</h1>
    {% include "userheader.twig" %}
{% endblock %}

{% block content %}
    <article>
    {% if message is defined %}
        <p>{{message}}</p>
    {% endif %}
    {% if message is not defined %}
        {% for user in users %}
            <p>Benutzername: {{ user.username }}</p>
            <p>E-Mail: {{ user.useremail }}</p>
            <p>Passwort: {{ user.password }}</p>
            <p>
                <a href="{{ app.url_generator.generate('delete') }}{{ user.id }}">Löschen</a>
            </p>
            <br>
        {% endfor %}
    {% endif %}
    </article>
    
    <article>
        {% if message is not defined %}
            {% include "pagination.twig" %}
            <br>
        {% endif %}
        <p>
            <a href="{{ app.url_generator.generate('dashboard') }}">Zurück zur Übersicht</a>
        </p>
    </article>
{% endblock %}