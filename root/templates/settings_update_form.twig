{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Benutzerdaten ändern - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block header %}
    {% include "header.twig" %}
{% endblock %}

{% block content %}
<div class="row">
    {% include "sidebar.twig" %}
    <div class="col-sm-8 col-sm-offset-4 col-lg-10 col-lg-offset-2 main">	
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <span class="glyphicon glyphicon-cog"></span>
                </a>
            </li>
            <li class="active">Profil</li>
        </ol>
    </div> 
    <div class="col-sm-8 col-sm-offset-4 col-lg-10 col-lg-offset-2">
        <div class="login-panel panel panel-default">
            <div class="panel-body">
                {% if message is defined %}
                <p class="{{message_type}}">{{message}}</p>
                {% endif %}
                <form  action="" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label for="{{oldinput_for}}" class="sr-only">{{oldinput_text}}</label>
                            <input class="form-control" type="text" name="{{oldinput_name}}" placeholder="{{oldinput_text}}">
                        </div>
                        <div class="form-group">
                            <label for="{{newinput_for}}" class="sr-only">{{newinput_text}}</label>
                            <input class="form-control" type="text" name="{{newinput_name}}" placeholder="{{newinput_text}}">
                        </div>
                        {% if errormessages is defined and errormessages is not null and errormessages.username is defined %}
                            <p class="errorMessage">{{errormessages.username}}</p>
                        {% endif %}
                        {% if errormessages is defined and errormessages is not null and errormessages.useremail is defined %}
                            <p class="errorMessage">{{errormessages.useremail}}</p>
                        {% endif %}
                        {% if errormessages is defined and errormessages is not null and errormessages.password is defined %}
                            <p class="errorMessage">{{errormessages.password}}</p>
                        {% endif %}
                        <button class="btn btn-primary" name="submit" type="submit">Ändern</button>
                    </fieldset>
                    <p class="text-right">
                        <a href="{{ app.url_generator.generate('settings') }}">Zurück</a>                        
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}