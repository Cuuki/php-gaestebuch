{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Login - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
        <section class="well">
            <h3>Loggen Sie sich ein</h3>         
            <fieldset>           
                <form action="" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label for="username" class="sr-only control-label">Benutzername</label>
                        <div class="col-lg-12">
                            <div class="form-control-wrapper">
                                <input class="form-control" placeholder="Benutzername" id="username" name="username" type="text"  >
                                <span class="material-input"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="sr-only control-label">Passwort</label>
                        <div class="col-lg-12">
                            <div class="form-control-wrapper">
                                <input class="form-control" placeholder="Passwort" id="password" name="password" type="password" >
                                <span class="material-input"></span>
                            </div>
                        </div>
                    </div>
                    {% if message is defined %}
                    <p class=" {{message_type}}">{{message}}</p>
                    {% endif %}   
                    <div class="form-group">
                        <div class="checkbox">
                            <div class="col-lg-12">
                                <div class="form-control-wrapper">
                                <label for="staylogged" class="control-label">
                                    <input id="staylogged" name="staylogged" type="checkbox" value="staylogged">
                                    <span class="ripple"></span>
                                    <span class="check"></span> Angemeldet bleiben
                                </label>
                                </div>
                            </div>
                        </div>                        
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button class="btn btn-primary" name="login" type="submit">Einloggen</button>
                        </div>
                    </div>
                </form>
                <p class="text-right">
                    <a href="{{ app.url_generator.generate('reset') }}">Passwort vergessen?</a>
                </p>
                <p class="text-right">
                    <a href="{{ app.url_generator.generate('guestbook') }}">Zum GÃ¤stebuch?</a>
                </p>
            </fieldset>
        </section>
    </div>
</div>
{% endblock %}