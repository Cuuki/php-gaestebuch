{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Login - Adminpanel</title>
    {% endblock %}
{% endblock %}

{% block content %}
<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="row">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h2>Loggen Sie sich ein:</h2>
            </div>
            <div class="panel-body">
                {% if message is defined %}
                <p class="{{message_type}}">{{message}}</p>
                {% endif %}
                <form action="" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label for="username" class="sr-only">Benutzername:</label>
                            <input class="form-control" placeholder="Benutzername" name="username" type="text" autofocus >
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">Passwort:</label>
                            <input class="form-control" placeholder="Passwort" name="password" type="password" >
                        </div>
                        <div class="checkbox">
                            <label for="staylogged">
                                <input id="staylogged" name="staylogged" type="checkbox" value="staylogged"> Angemeldet bleiben
                            </label>
                        </div>
                        <button class="btn btn-primary" name="login" type="submit">Einloggen</button>
                    </fieldset>
                    <p class="text-right">
                        <a href="{{ app.url_generator.generate('reset') }}">Passwort vergessen?</a>
                    </p>
                </form>
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.col-->
{% endblock %}
